---
import Header from '../components/Header.astro';
import '@fontsource-variable/source-code-pro';
interface Props {
    title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <div class="fixed top-0 left-0 w-full h-full -z-10 "></div>
        <Header title='Jacobo Duque' subtitle='Hello! I am a Fullstack Game Developer, passionate about most game genres and I love making things.'/>
        <slot name="content"/> 
    </body>
</html>

<style is:global>
    :root {
        color-scheme: dark;
    }
    html {
        font-family: 'Source Code Pro Variable', monospace;
        scroll-behavior: smooth;
        
    }
    body {
	font-size: 100%;
        background: #171717;
        color: #fff;
        display: flex;
	flex-direction: column;
